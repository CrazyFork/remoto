%><%

let comment = fn(s) {
	return "// "+s
}

let serverName = fn(serviceName) {
	return serviceName + "Server"
}

let typeString = fn(type) {
	if (type.IsMultiple) {
		return "[]" + type.Name
	}
	return type.Name
}

%>// Code generated by Remoto; DO NOT EDIT.

// Package <%= def.PackageName %> contains the JSON/HTTP server for <%= def.PackageName %> services.
package <%= def.PackageName %>

