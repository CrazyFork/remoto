<html>
<head>
	<title>Remoto example service</title>
	<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css'>
</head>
<body>
	<div class='container'>
		<div class='content'>
			<h1 class='title'>Remoto jQuery 3 client library test</h1>
			<%= for (service) in def.Services { %>
			<div class='box'>
				<h2><%= service.Name %></h2>
				<p><%= service.Comment %></p>
				<div class='field'>
					<label class='label'>Endpoint</label>
					<input type='url' required='required' class='input' placeholder='endpoint' value='http://localhost:8080'>
				</div>
				<%= for (method) in service.Methods { %>
				<h3><%= method.Name %></h3>
				<form>
				<%= for (field) in method.RequestType.Fields { %>
					<div class='field'>
						<label class='label'><%= field.Name %></label>
						<input class='input' placeholder='<%= field.Comment %>'>
					</div>
				<% } %>
				</form>
				<% } %>
			</div>
			<% } %>
		</div>
	</div>
	<script
		src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
		integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
		rossorigin="anonymous"></script>
	<script src='jquery-client.js'></script>
</body>
</html>
